modules = ["web", "nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "glibcLocales", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "XabarBot Flask App"

[[workflows.workflow]]
name = "XabarBot Flask App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38937
externalPort = 4200

[[ports]]
localPort = 38963
externalPort = 5173

[[ports]]
localPort = 44149
externalPort = 3001

[[ports]]
localPort = 44967
externalPort = 5000

[[ports]]
localPort = 46129
externalPort = 3003

[[ports]]
localPort = 46419
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=2", "--worker-class=gthread", "--timeout=120", "main:app"]
build = ["pip", "install", "-r", "requirements.txt"]
